<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addpatient"
    android:background="@drawable/hospital">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Patience Info"
        android:textSize="50dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:id="@+id/nurse_info"
        android:layout_centerHorizontal="true"
        android:fontFamily="cursive"
        />
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:src="@drawable/doctor"
        android:layout_centerHorizontal="true"
        android:id="@+id/patient_photo"
        android:layout_marginTop="70dp"
      />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/patient_photo">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="name"
                android:textColorHint="#000"
                android:layout_marginTop="40dp"
                android:id="@+id/patientname_et"
                android:fontFamily="casual"
                android:background="@drawable/email"
                android:padding="10dp"

                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="email"
                android:textColorHint="#000"
                android:layout_marginTop="10dp"
                android:id="@+id/emailpatient_et"
                android:layout_below="@id/patientname_et"
                android:fontFamily="casual"
                android:background="@drawable/email"
                android:padding="10dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="father name"
                android:textColorHint="#000"
                android:layout_marginTop="10dp"
                android:id="@+id/father_et"
                android:layout_below="@id/emailpatient_et"
                android:fontFamily="casual"
                android:background="@drawable/email"
                android:padding="10dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="mother name"
                android:textColorHint="#000"
                android:layout_marginTop="10dp"
                android:id="@+id/mother_et"
                android:layout_below="@id/father_et"
                android:fontFamily="casual"
                android:background="@drawable/email"
                android:padding="10dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="DOB"
                android:textColorHint="#000"
                android:layout_marginTop="10dp"
                android:id="@+id/dob_et"
                android:layout_below="@id/mother_et"
                android:fontFamily="casual"
                android:background="@drawable/email"
                android:padding="10dp"


                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="address"
                android:textColorHint="#000"
                android:layout_marginTop="10dp"
                android:id="@+id/addresspatient_et"
                android:layout_below="@id/dob_et"
                android:fontFamily="casual"
                android:background="@drawable/email"
                android:padding="10dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="mobile no"
                android:textColorHint="#000"
                android:layout_marginTop="10dp"
                android:id="@+id/mobilepatient_et"
                android:layout_below="@id/addresspatient_et"
                android:fontFamily="casual"
                android:background="@drawable/email"
                android:padding="10dp"


                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="blood group"
                android:textColorHint="#000"
                android:layout_marginTop="10dp"
                android:id="@+id/bloodgrp_et"
                android:layout_below="@id/mobilepatient_et"
                android:fontFamily="casual"
                android:background="@drawable/email"
                android:padding="10dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="weight"
                android:textColorHint="#000"
                android:layout_marginTop="10dp"
                android:id="@+id/weight_et"
                android:layout_below="@id/bloodgrp_et"
                android:fontFamily="casual"
                android:background="@drawable/email"
                android:padding="10dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="height"
                android:textColorHint="#000"
                android:layout_marginTop="10dp"
                android:id="@+id/height_et"
                android:layout_below="@id/weight_et"
                android:fontFamily="casual"
                android:background="@drawable/email"
                android:padding="10dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="gender"
                android:textColorHint="#000"
                android:layout_marginTop="10dp"
                android:id="@+id/gender_et"
                android:layout_below="@id/height_et"
                android:fontFamily="casual"
                android:background="@drawable/email"
                android:padding="10dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="complaint"
                android:textColorHint="#000"
                android:layout_marginTop="10dp"
                android:id="@+id/complaint_et"
                android:layout_below="@id/gender_et"
                android:fontFamily="casual"
                android:background="@drawable/email"
                android:padding="10dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SAVE"
                android:textColor="#000"
                android:onClick="add_data3"
                android:textSize="30dp"
                android:padding="5dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/email"
                android:layout_below="@id/complaint_et"
                android:layout_centerHorizontal="true"
                android:fontFamily="cursive"/>
        </RelativeLayout>

    </ScrollView>




</RelativeLayout>