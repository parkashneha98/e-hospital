<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addnursecolleague"
    android:background="@drawable/hospital"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add nurse Colleague"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:id="@+id/add_nursecoll"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:fontFamily="cursive"
        />
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:src="@drawable/nurse"
        android:layout_centerHorizontal="true"
        android:id="@+id/nursecoll_photo"
        android:layout_below="@+id/add_nursecoll"
        android:layout_marginTop="30dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/nursecoll_photo">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">





            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="15dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/card_nursecoll"
                android:layout_marginTop="70dp"
                android:padding="10dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="15dp"
                    android:background="#ccc">



                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="nurse name"
                            android:textColorHint="#000"
                            android:id="@+id/nursecoll_et"
                            android:fontFamily="casual"

                            />



                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="contact no"
                            android:id="@+id/contactnurse_et"
                            android:fontFamily="casual"

                            android:textColorHint="#000"/>


                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="designation"
                            android:id="@+id/designcollnur_et"
                            android:fontFamily="casual"
                            android:textColorHint="#000"/>


                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="email id"
                            android:id="@+id/emailcollnur_et"
                            android:fontFamily="casual"
                            android:textColorHint="#000"/>


                    </RelativeLayout>

                </LinearLayout>



            </android.support.v7.widget.CardView>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADD"
                android:textColor="#000"
                android:onClick="add_nursecoll"
                android:textSize="30dp"
                android:padding="5dp"
                android:background="@drawable/email"
                android:layout_below="@id/card_nursecoll"
                android:layout_centerHorizontal="true"
                android:fontFamily="cursive"
                android:layout_marginTop="20dp"/>
        </RelativeLayout>
    </ScrollView>



</RelativeLayout>