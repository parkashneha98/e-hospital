<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".nurseinfo"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/hospital">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:src="@drawable/doctor"
        android:layout_marginLeft="100dp"
        android:id="@+id/nurse_photo"
        android:layout_marginTop="20dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nurse Info"
        android:textSize="50dp"
       android:fontFamily="cursive"
        android:textColor="#000"
        android:id="@+id/doctor_info"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/nurse_photo"
        android:layout_marginTop="40dp"
        android:textStyle="bold"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/doctor_info">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="name"
                android:textColorHint="#000"
                android:layout_marginTop="40dp"
                android:id="@+id/name_et"
                android:fontFamily="casual"
                android:background="@drawable/email"
                android:padding="10dp"



                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="email"
                android:textColorHint="#000"
                android:layout_marginTop="10dp"
                android:id="@+id/emailnurse_et"
                android:layout_below="@id/name_et"
                android:fontFamily="casual"
                android:background="@drawable/email"
                android:padding="10dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="area of interest"
                android:textColorHint="#000"
                android:layout_marginTop="10dp"
                android:id="@+id/aoi2_et"
                android:layout_below="@id/emailnurse_et"
                android:fontFamily="casual"
                android:background="@drawable/email"
                android:padding="10dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="education"
                android:textColorHint="#000"
                android:layout_marginTop="10dp"
                android:id="@+id/educ2_et"
                android:layout_below="@id/aoi2_et"
                android:fontFamily="casual"
                android:background="@drawable/email"
                android:padding="10dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="experience"
                android:textColorHint="#000"
                android:layout_marginTop="10dp"
                android:id="@+id/experience2_et"
                android:layout_below="@id/educ2_et"
                android:fontFamily="casual"
                android:background="@drawable/email"
                android:padding="10dp"

                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="speciality"
                android:textColorHint="#000"
                android:layout_marginTop="10dp"
                android:id="@+id/special2_et"
                android:layout_below="@id/experience2_et"
                android:fontFamily="casual"
                android:background="@drawable/email"
                android:padding="10dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="mobile no"
                android:textColorHint="#000"
                android:layout_marginTop="10dp"
                android:id="@+id/mobile2_et"
                android:layout_below="@id/special2_et"
                android:fontFamily="casual"
                android:background="@drawable/email"
                android:padding="10dp"

                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="working hours"
                android:textColorHint="#000"
                android:layout_marginTop="10dp"
                android:id="@+id/hours2_et"
                android:layout_below="@id/mobile2_et"
                android:fontFamily="casual"
                android:background="@drawable/email"
                android:padding="10dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SAVE"
                android:textColor="#000"
                android:onClick="add_data2"
                android:textSize="30dp"
                android:padding="5dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/email"
                android:layout_below="@id/hours2_et"
                android:layout_centerHorizontal="true"
                android:fontFamily="cursive"

                />
        </RelativeLayout>

    </ScrollView>




</RelativeLayout>