<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".editprofiledoctor"
    android:background="@drawable/hospital"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:src="@drawable/doctor"
        android:id="@+id/doctor_update"
      android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Doctor Info"
        android:textSize="50dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:id="@+id/doctor_info"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:fontFamily="cursive"
        android:layout_below="@+id/doctor_update"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/doctor_info">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="name"
                android:textColorHint="#000"
                android:layout_marginTop="40dp"
                android:id="@+id/nameedit_et"
                android:fontFamily="casual"
                android:background="@drawable/email"
                android:padding="10dp"


                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="email"
                android:textColorHint="#000"
                android:layout_marginTop="10dp"
                android:id="@+id/emailedit_et"
                android:layout_below="@id/nameedit_et"
                android:fontFamily="casual"
                android:background="@drawable/email"
                android:padding="10dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="area of interest"
                android:textColorHint="#000"
                android:layout_marginTop="10dp"
                android:id="@+id/aoiedit_et"
                android:layout_below="@id/emailedit_et"
                android:fontFamily="casual"
                android:background="@drawable/email"
                android:padding="10dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="education"
                android:textColorHint="#000"
                android:layout_marginTop="10dp"
                android:id="@+id/educedit_et"
                android:layout_below="@id/aoiedit_et"
                android:fontFamily="casual"
                android:background="@drawable/email"
                android:padding="10dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="experience"
                android:textColorHint="#000"
                android:layout_marginTop="10dp"
                android:id="@+id/experienceedit_et"
                android:layout_below="@id/educedit_et"
                android:fontFamily="casual"
                android:background="@drawable/email"
                android:padding="10dp"

                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="speciality"
                android:textColorHint="#000"
                android:layout_marginTop="10dp"
                android:id="@+id/specialedit_et"
                android:layout_below="@id/experienceedit_et"
                android:fontFamily="casual"
                android:background="@drawable/email"
                android:padding="10dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="mobile no"
                android:textColorHint="#000"
                android:layout_marginTop="10dp"
                android:id="@+id/mobileedit_et"
                android:layout_below="@id/specialedit_et"
                android:fontFamily="casual"
                android:background="@drawable/email"
                android:padding="10dp"

                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="working hours"
                android:textColorHint="#000"
                android:layout_marginTop="10dp"
                android:id="@+id/hoursedit_et"
                android:layout_below="@id/mobileedit_et"
                android:fontFamily="casual"
                android:background="@drawable/email"
                android:padding="10dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="update"
                android:textColor="#000"
                android:onClick="update_profile"
                android:textSize="30dp"
                android:padding="5dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/email"
                android:layout_below="@id/hoursedit_et"
                android:layout_centerHorizontal="true"
                android:fontFamily="cursive"
                />
        </RelativeLayout>

    </ScrollView>



</RelativeLayout>