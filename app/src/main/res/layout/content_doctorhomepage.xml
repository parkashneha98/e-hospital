<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".doctorhomepage"
    tools:showIn="@layout/app_bar_doctorhomepage">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:gravity="center"
                    >
                    <ViewFlipper
                        android:layout_width="match_parent"
                        android:layout_height="230dp"
                        android:autoStart="true">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="230dp"
                            android:src="@drawable/hospital"
                            android:scaleType="centerCrop"
                            />
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="230dp"
                            android:src="@drawable/room"
                            android:scaleType="centerCrop"/>
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="230dp"
                            android:src="@drawable/coridoor"
                            android:scaleType="centerCrop"/>



                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="230dp"
                            android:src="@drawable/wall"
                            android:scaleType="centerCrop"/>


                    </ViewFlipper>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="228dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp"
                        >
                        <android.support.v7.widget.CardView
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_marginRight="10dp">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#EBB6C9"
                                >
                                <ImageView
                                    android:layout_width="120dp"
                                    android:layout_height="120dp"
                                    android:src="@drawable/addlogo"
                                    android:layout_centerHorizontal="true"
                                    android:id="@+id/add1"
                                    android:layout_marginTop="40dp"
                                    android:onClick="openaddpatient"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Add patient"
                                    android:textSize="25dp"
                                    android:textColor="#000"
                                    android:layout_below="@+id/add1"
                                    android:layout_centerHorizontal="true"
                                   android:fontFamily="cursive"
                                    android:layout_marginTop="20dp"


                                    />


                            </RelativeLayout>

                        </android.support.v7.widget.CardView>
                        <android.support.v7.widget.CardView
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_marginRight="10dp">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#EBB6C9"
                                >
                                <ImageView
                                    android:layout_width="120dp"
                                    android:layout_height="120dp"
                                    android:src="@drawable/medicine"
                                    android:layout_centerHorizontal="true"
                                    android:id="@+id/add2"
                                    android:layout_marginTop="40dp"
                                    android:onClick="add_datamedicine"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Add medicine"
                                    android:textSize="25dp"
                                    android:textColor="#000"
                                    android:layout_below="@+id/add2"
                                    android:layout_centerHorizontal="true"
                                    android:textStyle="bold"
                                    android:layout_marginTop="20dp"
                                    android:fontFamily="cursive"


                                    />
                                >

                            </RelativeLayout>

                        </android.support.v7.widget.CardView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp"
                        >
                        <android.support.v7.widget.CardView
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_marginRight="10dp"
                            >
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#EBB6C9"
                                >
                                <ImageView
                                    android:layout_width="120dp"
                                    android:layout_height="120dp"
                                    android:src="@drawable/staff"
                                    android:layout_centerHorizontal="true"
                                    android:id="@+id/add3"
                                    android:layout_marginTop="40dp"
                                    android:onClick="add_staff"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=" Add Staff"
                                    android:textSize="25dp"
                                    android:textColor="#000"
                                    android:layout_below="@+id/add3"
                                    android:layout_centerHorizontal="true"
                                    android:fontFamily="cursive"
                                    android:layout_marginTop="20dp"


                                    />



                            </RelativeLayout>

                        </android.support.v7.widget.CardView>
                        <android.support.v7.widget.CardView
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_marginRight="10dp">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#EBB6C9"
                                >
                                <ImageView
                                    android:layout_width="120dp"
                                    android:layout_height="120dp"
                                    android:src="@drawable/appoint"
                                    android:layout_centerHorizontal="true"
                                    android:id="@+id/add4"
                                    android:layout_marginTop="40dp"
                                    android:onClick="view_applist"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Appointments"
                                    android:textSize="25dp"
                                    android:textColor="#000"
                                    android:layout_below="@+id/add4"
                                    android:layout_centerHorizontal="true"
                                  android:fontFamily="cursive"
                                    android:layout_marginTop="20dp"

                                    />



                            </RelativeLayout>

                        </android.support.v7.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>


</RelativeLayout>