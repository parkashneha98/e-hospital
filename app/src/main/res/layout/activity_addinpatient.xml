<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addinpatient"
    android:background="@drawable/hospital"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Inpatient"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:id="@+id/add_inpatient"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:fontFamily="cursive"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/add_inpatient">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">





            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="15dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/card_inpatient"
                android:layout_marginTop="100dp"
                android:padding="10dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="15dp"
                    android:background="#ccc">



                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="patiencename"
                            android:textColorHint="#000"
                            android:id="@+id/inpatientname_et"
                            android:fontFamily="casual"

                            />



                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="email id"
                            android:id="@+id/emailin_et"
                            android:fontFamily="casual"

                            android:textColorHint="#000"/>


                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="ward"
                            android:id="@+id/ward_et"
                            android:fontFamily="casual"
                            android:textColorHint="#000"/>


                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="disease"
                            android:id="@+id/disease_et"
                            android:fontFamily="casual"
                            android:textColorHint="#000"/>


                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="treatment"
                            android:id="@+id/treatment_et"
                            android:fontFamily="casual"
                            android:textColorHint="#000"/>


                    </RelativeLayout>

                </LinearLayout>



            </android.support.v7.widget.CardView>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add "
                android:textColor="#000"
                android:onClick="add_inpatient"
                android:textSize="20dp"
                android:padding="5dp"
                android:background="@drawable/email"
                android:layout_below="@id/card_inpatient"
                android:layout_alignParentLeft="true"
                android:fontFamily="cursive"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="10dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View "
                android:textColor="#000"
                android:onClick="view_record"
                android:textSize="20dp"
                android:padding="5dp"
                android:background="@drawable/email"
                android:layout_below="@id/card_inpatient"
                android:layout_alignParentRight="true"
                android:fontFamily="cursive"
                android:layout_marginTop="50dp"
                android:layout_marginRight="10dp"/>
        </RelativeLayout>
    </ScrollView>



</RelativeLayout>